<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
      <com.example.view.CircularImage
                android:id="@+id/my_message_imgc"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/img10" />

            <TextView
                android:id="@+id/my_message_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/my_message_imgc"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/my_message_imgc"
                android:text="用户名"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_message_uptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_alignBottom="@id/my_message_username"
                android:text="3天前"
                android:textColor="#808080"
                android:textSize="12sp" />
            <TextView 
                 android:id="@+id/my_message_comment_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/my_message_username"
                android:layout_marginLeft="2dp"
                android:layout_alignBottom="@id/my_message_username"
                android:text="评论了你"
                android:textColor="#808080"
                android:textSize="13sp"               
                />
            <TextView 
                android:id="@+id/my_message_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_message_username"
                android:layout_marginTop="4dp"
                android:layout_alignLeft="@id/my_message_username"
                android:text="还行"
                android:textColor="#808080"
                android:textSize="13sp"               
                />
            <View 
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#808080"
                />

            <ImageView
                android:id="@+id/my_message_read_state"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignRight="@+id/my_message_imgc"
                android:layout_alignTop="@+id/my_message_imgc"
                android:src="@drawable/message_unread_bg" />

</RelativeLayout>
