<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="40dp"
     >
    <TextView
        android:id="@+id/myinfo_actionbar_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/refresh_button"
        android:layout_alignBottom="@+id/refresh_button"
        android:layout_centerHorizontal="true"
        android:text="图片详情" 
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/myinfo_actionbar_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/myinfo_backback"
        />
    <ImageView
        android:id="@+id/myinfo_actionbar_share"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/myinfo_actionbar_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/tm_post_mainpage_share"
         />
     
</RelativeLayout>
