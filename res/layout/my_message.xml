<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lie="http://schemas.android.com/apk/res/com.example.imgweb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<RelativeLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="45dp"
         >           
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="消息"
                android:textSize="20sp"
                android:id="@+id/tab_up"
                android:textColor="#31C27C"
                />

             
    <Button
        android:id="@+id/mymessage_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/myinfo_backback"
        />

    <Button
        android:id="@+id/mymessage_fresh"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/message_fresh"
        android:layout_marginRight="12dp"
 />

    </RelativeLayout>
    <com.example.waterfallview.XListView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mymessage_list"
        android:scrollbars="vertical"
        android:fastScrollEnabled="true" 
        lie:plaColumnNumber="1" 
      
        />
</LinearLayout>
