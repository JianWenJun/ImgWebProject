<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#FAEBD7"
   >

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_centerHorizontal="true"
        android:text="图片网"
        android:textSize="15sp"  />

    <ImageView
        android:id="@+id/login_finish"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/login_logo"
        android:layout_toRightOf="@+id/edit_password"
        android:src="@drawable/dot" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_below="@+id/edit_name"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="请输入用户名" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="29sp"
        android:layout_alignLeft="@+id/edit_password"
        android:layout_alignRight="@+id/edit_password"
        android:layout_below="@+id/edit_password"
        android:layout_marginTop="112dp"
        android:background="#87CEEB"
        android:text="立即登录" />

    <TextView
        android:id="@+id/password_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_login"
        android:layout_alignLeft="@+id/button_login"
        android:layout_marginBottom="42dp"
        android:text="忘记密码"
        android:textColor="#808080" />

    <Button
        android:id="@+id/yzm_change"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/edit_password"
        android:layout_below="@+id/edit_password"
        android:background="#00000000"
        android:layout_marginTop="6dp"
        android:text="换一张"
        android:textColor="#00FFFF"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_yzmsuiji"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/yzm_change"
        android:layout_alignBottom="@+id/yzm_change"
        android:layout_toLeftOf="@+id/yzm_change"
        android:inputType="number"
        android:ems="10"
        android:hint="验证码" />

    <ImageView
        android:id="@+id/yzm_img"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/yzm_change"
        android:layout_marginRight="19dp"
        android:layout_toLeftOf="@+id/edit_yzmsuiji"
         />

</RelativeLayout>